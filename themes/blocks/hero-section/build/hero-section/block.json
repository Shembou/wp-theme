{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "create-block/hero-section",
  "version": "0.1.0",
  "title": "Sekcja wstępna",
  "category": "widgets",
  "icon": "text-page",
  "description": "Sekcja wstępna z mózgiem",
  "example": {},
  "supports": {
    "html": false,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "textdomain": "hero-section",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "attributes": {
    "HeaderType": {
      "type": "string",
      "default": "h2"
    },
    "header": {
      "type": "string"
    },
    "text": {
      "type": "string"
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "isOverlapping": {
            "type": "boolean"
          },
          "color": {
            "type": "string",
            "enum": [
              "gray",
              "blue-green"
            ]
          }
        },
        "required": [
          "url",
          "text"
        ]
      },
      "minItems": 1,
      "maxItems": 4
    },
    "button": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "isSecondary": {
          "type": "boolean",
          "default": false
        },
        "svg": {
          "type": "string",
          "default": ""
        },
        "svg_alt": {
          "type": "string"
        }
      }
    }
  }
}